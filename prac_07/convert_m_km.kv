BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1, int(input_number.text))
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1, int(input_number.text))
    Button:
        text: 'Convert miles to km'
        on_press: app.convert_miles_to_km(int(input_number.text))
    Label:
        id: output_number